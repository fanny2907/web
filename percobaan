    <script>
        function login() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
    
            if (username === 'fanny29' && password === '031122') {
                document.getElementById('slide1').classList.remove('active');
                document.getElementById('slide2').classList.add('active');
            }else if (username === 'martha03' && password === '123456') {
                document.getElementById('slide1').classList.remove('active');
                document.getElementById('slide2').classList.add('active');
            }else if (username === 'eddies21' && password === '654321') {
                document.getElementById('slide1').classList.remove('active');
                document.getElementById('slide2').classList.add('active'); 
            } else {
                alert('Username atau password salah !!');
            }
        }
    
        let bahanCount = 1;
    
        function addBahan() {
            bahanCount++;
            const bahanContainer = document.getElementById('bahanContainer');
    
            const inputGroup = document.createElement('div');
            inputGroup.classList.add('input-grid');
            inputGroup.innerHTML = `
                <div>
                    <label for="bahan${bahanCount}">Bahan</label>
                    <input type="text" id="bahan${bahanCount}" name="bahan[]" required>
                </div>
                <div>
                    <label for="berat${bahanCount}">Berat</label>
                    <input type="number" id="berat${bahanCount}" name="berat[]" required>
                </div>
                <div>
                    <label for="unit${bahanCount}">Unit</label>
                    <select id="unit${bahanCount}" name="unit[]">
                        <option value="gram">gram</option>
                        <option value="kg">kilogram</option>
                        <option value="liter">liter</option>
                    </select>
                </div>
                <div>
                    <label for="hargaBahan${bahanCount}">Harga per Unit</label>
                    <input type="number" id="hargaBahan${bahanCount}" name="hargaBahan[]" required>
                </div>
            `;
    
            bahanContainer.appendChild(inputGroup);
        }
    
        function submitForm() {
            const namaProduk = document.getElementById('namaProduk').value;
            const bahanInputs = document.querySelectorAll('input[name="bahan[]"]');
            const beratInputs = document.querySelectorAll('input[name="berat[]"]');
            const unitInputs = document.querySelectorAll('select[name="unit[]"]');
            const hargaBahanInputs = document.querySelectorAll('input[name="hargaBahan[]"]');
            
            
            document.getElementById('gridBahanDisplay').innerHTML = '';
    
            
            document.getElementById('displayNamaProduk').textContent = namaProduk;
    
            
            for (let i = 0; i < bahanInputs.length; i++) {
                const bahanItem = document.createElement('div');
                bahanItem.textContent = bahanInputs[i].value;
                const beratItem = document.createElement('div');
                beratItem.textContent = beratInputs[i].value;
                const unitItem = document.createElement('div');
                unitItem.textContent = unitInputs[i].value;
                const hargaItem = document.createElement('div');
                hargaItem.textContent = hargaBahanInputs[i].value;
    
                document.getElementById('gridBahanDisplay').appendChild(bahanItem);
                document.getElementById('gridBahanDisplay').appendChild(beratItem);
                document.getElementById('gridBahanDisplay').appendChild(unitItem);
                document.getElementById('gridBahanDisplay').appendChild(hargaItem);
            }
    
            
            document.getElementById('slide2').classList.remove('active');
            document.getElementById('slide3').classList.add('active');
        }
    
        function calculateSimplex() {
            const namaProduk = document.getElementById('namaProduk').value;
            const hargaProduk = document.getElementById('hargaProduk').value;
            const bahanInputs = document.querySelectorAll('input[name="bahan[]"]');
            const beratInputs = document.querySelectorAll('input[name="berat[]"]');
            const unitInputs = document.querySelectorAll('select[name="unit[]"]');
            const hargaBahanInputs = document.querySelectorAll('input[name="hargaBahan[]"]');
            
            
            let totalBiaya = 0;
            let totalVolume = 0;
    
            document.getElementById('resultTable').innerHTML = '';
    
            for (let i = 0; i < bahanInputs.length; i++) {
                const bahan = bahanInputs[i].value;
                const berat = beratInputs[i].value;
                const unit = unitInputs[i].value;
                const hargaPerUnit = hargaBahanInputs[i].value;
                const totalHarga = berat * hargaPerUnit;
                totalBiaya += totalHarga;
    
                if (!berat || berat <= 0) {
                alert("Berat bahan ke-${i + 1} harus diisi dengan benar!");
                return;
            }
    
                const volume = berat * 0.001;
                totalVolume += volume;
    
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${bahan}</td>
                    <td>${berat}</td>
                    <td>${unit}</td>
                    <td>${hargaPerUnit}</td>
                    <td>${totalHarga}</td>
                `;
                document.getElementById('resultTable').appendChild(row);
            }
    
            const profit = hargaProduk - totalBiaya;
    
            document.getElementById('resultNamaProduk').textContent = namaProduk;
            document.getElementById('resultHargaProduk').textContent = hargaProduk;
            document.getElementById('totalBiaya').textContent = totalBiaya;
            document.getElementById('hargaJual').textContent = hargaProduk;
            document.getElementById('profit').textContent = profit;
            document.getElementById('resultVolumeKeripik').textContent = totalVolume.toFixed(2); 
    
    
            
            document.getElementById('slide3').classList.remove('active');
            document.getElementById('slide4').classList.add('active');
        }
    </script>
    
    </body>
